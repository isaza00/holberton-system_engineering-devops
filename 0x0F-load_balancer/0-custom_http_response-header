#!/usr/bin/env bash
# install ngix, setup it up on port 80 HTTP 
# and write Holberton School in index file
# add a custom header with hostname as value
apt-get -y update
apt-get -y install nginx
echo 'Holberton School' > /var/www/html/index.html
sed -i '/server_name _;/ a rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;' /etc/nginx/sites-available/default
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html
sed -i '/server_name _;/ a error_page 404 /custom_404.html;' /etc/nginx/sites-available/default
host_name=$(cat /etc/hostname)
sed -i "0,/location \/ {/s//location \/ {\nadd_header X-Served-By $host_name;/" /etc/nginx/sites-available/default
service nginx restart
